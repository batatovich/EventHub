name: Node.js CI

on:
  push:
    branches: [ "main", "develop" ]
  pull_request:
    branches: [ "main", "develop" ]

jobs:
  test:

    runs-on: ubuntu-latest

    services:
      postgres:
        image: postgres:latest
        env:
          POSTGRES_USER: postgres
          POSTGRES_PASSWORD: password
          POSTGRES_DB: myapp_test
        ports:
          - 5432:5432
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - name: Check out repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '14'

      - name: Install dependencies
        run: npm ci
        working-directory: server

      - name: Set up and source environment variables
        run: |
          echo "DATABASE_URL=postgres://postgres:password@localhost:5432/myapp_test" > .env.test
        working-directory: server

      - name: Debug environment file
        run: cat .env.test
        working-directory: server

      - name: Run migrations
        run: |
          source .env.test
          npx prisma migrate deploy
        working-directory: server

      - name: Run tests
        env:
          DATABASE_URL: postgres://postgres:password@localhost:5432/myapp_test
        run: npm test
        working-directory: server
